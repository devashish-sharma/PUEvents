<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:onClick="logout"
            android:text="Save" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/camera2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/event2"/>


        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_camera_black_24dp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">

                <EditText
                    android:id="@+id/e1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableLeft="@drawable/emails"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center"
                    android:hint="   Email address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:typeface="sans" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">


                <EditText
                    android:id="@+id/e6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/lock"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:hint="  Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">


                <EditText
                    android:id="@+id/e7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/lock"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:hint="  Confirm-Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">

                <EditText
                    android:id="@+id/e2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center"
                    android:hint="   Full Name"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"

                    android:typeface="sans" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">

                <EditText
                    android:id="@+id/e3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center"
                    android:hint="   Mobile No"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:backgroundTint="@android:color/black"
                    android:popupBackground="#000"
                    android:popupTheme="@android:color/white" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">

                <EditText
                    android:id="@+id/e4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center"
                    android:hint="   City"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp">


                <EditText
                    android:id="@+id/e5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center"
                    android:hint="   University/College"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>